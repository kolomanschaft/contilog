@namespace Contilog.Components

<button class="btn @GetButtonClass()" @onclick="OnClick" title="@Title">
    <span class="oi @Icon" aria-hidden="true"></span>
</button>

@code {
    [Parameter] public string Icon { get; set; } = "oi-info";
    [Parameter] public string Color { get; set; } = "primary";
    [Parameter] public bool IsOutlined { get; set; } = true;
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public EventCallback OnClick { get; set; }

    private string GetButtonClass()
    {
        var baseClass = IsOutlined ? "btn-outline-" : "btn-";
        return $"{baseClass}{Color}";
    }
}
